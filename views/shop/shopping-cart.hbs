{{#if products}}
<div class="row products">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <ul class="list-group">
            {{#each products}}
            <li class="list-group-item" id="{{this.item._id}}">
                <span class="badge" id="q{{this.item._id}}">{{this.quantity}}</span>
                <strong>{{this.item.title}}</strong>
                <span class="label label-success" id="p{{this.item._id}}">{{this.price}}</span>
                <div class="btn-group">
                    <button class="btn btn-primary btn-xs dropdown-toggle" type="button" data-toggle="dropdown">Action <span class="caret"></span></button>
                    <ul class="dropdown-menu">
                        <li><a onclick="return reduceCartProductByOne('{{this.item._id}}');">Reduce by 1</a></li>
                        <li><a onclick="return removeItem('{{this.item._id}}')">Remove All</a></li>
                    </ul>
                </div>
            </li>
            {{/each}}
        </ul>
    </div>
</div>
<div class="row products">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <strong id="total-price">Total: {{totalPrice}}</strong>
    </div>
</div>
<hr class="products">
<div class="row products">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <button type="button" class="btn btn-success">Checkout</button>
    </div>
</div>
{{else}}
<div class="row no-products">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <h2>No Item In Carts</h2>
    </div>
</div>
{{/if}}